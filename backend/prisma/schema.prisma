// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Keep this if you are using prisma.config.ts (Prisma 7 feature)
  // Otherwise, use: url = env("DATABASE_URL")
}

// --- MODELS ---

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String?  // Optional (for Google Auth users)
  googleId  String?  @unique 
  createdAt DateTime @default(now())
  
  submissions Submission[]
}

model Admin {
  id        Int      @id @default(autoincrement())
  username      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  problems  Problem[] 
}

model Problem {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  difficulty  String   
  constraints String?
  
  testCases   TestCase[]
  submissions Submission[]

  // Link to the Admin who created it
  adminId     Int?     // Optional (in case you seed problems manually)
  author      Admin?   @relation(fields: [adminId], references: [id])
}

model TestCase {
  id        Int      @id @default(autoincrement())
  input     String
  output    String
  problemId Int
  
  problem   Problem @relation(fields: [problemId], references: [id])
}

model Submission {
  id        Int      @id @default(autoincrement())
  language  String   
  code      String
  status    String   @default("Pending") 
  output    String?  
  createdAt DateTime @default(now())
  
  userId    Int
  problemId Int

  user      User     @relation(fields: [userId], references: [id])
  problem   Problem  @relation(fields: [problemId], references: [id])
}